    background: rgba(59, 130, 246, 0.1);
    border-color: rgba(59, 130, 246, 0.3);
    color: var(--accent-primary);
}

.dark .comparison-tab-button:hover {
    background: rgba(96, 165, 250, 0.1);
    border-color: rgba(96, 165, 250, 0.3);
    color: #60a5fa;
}

.comparison-tab-button.active {
    background: rgba(59, 130, 246, 0.15);
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.2);
}

.dark .comparison-tab-button.active {
    background: rgba(96, 165, 250, 0.2);
    border-color: #60a5fa;
    color: #60a5fa;
    box-shadow: 0 2px 8px rgba(96, 165, 250, 0.3);
}

.comparison-tab-button .tab-item-name {
    max-width: 150px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.comparison-tab-remove {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    border-radius: 6px;
    color: #f97316;
    cursor: pointer;
    transition: all 0.2s ease;
    flex-shrink: 0;
}

.comparison-tab-remove:hover {
    background: rgba(249, 115, 22, 0.15);
    color: #ea580c;
}

.dark .comparison-tab-remove {
    color: #fb923c;
}

.dark .comparison-tab-remove:hover {
    background: rgba(251, 146, 60, 0.2);
    color: #f97316;
}

/* Comparison Item Cards */
.comparison-items-container {
    min-height: 200px;
}

.comparison-item-card {
    animation: fadeIn 0.3s ease-in;
}

.comparison-card-inner {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.06), rgba(139, 92, 246, 0.04));
    border: 2px solid var(--accent-primary);
    border-radius: 16px;
    padding: 20px;
    box-shadow: 0 2px 12px var(--shadow);
    transition: all 0.3s ease;
}

.dark .comparison-card-inner {
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.1), rgba(167, 139, 250, 0.06));
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
}

.comparison-card-inner:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px var(--shadow);
}

.dark .comparison-card-inner:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
}

.comparison-card-header {
    margin-bottom: 16px;
}

.comparison-inputs-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
    margin-bottom: 16px;
}

@media (min-width: 640px) {
    .comparison-inputs-row {
        grid-template-columns: 1fr 1fr;
    }
}

.comparison-input-group {
    margin-bottom: 0;
}

.comparison-stats-container {
    margin-bottom: 16px;
}

.comparison-stat-row {
    display: grid;
    grid-template-columns: 1fr 1fr auto;
    gap: 10px;
    margin-bottom: 10px;
    align-items: end;
    animation: slideInLeft 0.2s ease-out;
    animation-delay: calc(var(--animation-order, 0) * 0.05s);
    animation-fill-mode: both;
}

@keyframes slideInLeft {
    from {
        opacity: 0;
        transform: translateX(-10px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.comparison-stat-group {
    flex: 1;
    min-width: 0;
}

.comparison-stat-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent-primary);
    margin-bottom: 4px;
}

.dark .comparison-stat-label {
    color: #60a5fa;
}

.comparison-stat-remove {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(249, 115, 22, 0.1);
    border: 1px solid rgba(249, 115, 22, 0.3);
    border-radius: 8px;
    color: #f97316;
    cursor: pointer;
    transition: all 0.2s ease;
    flex-shrink: 0;
}

.comparison-stat-remove:hover {
    background: rgba(249, 115, 22, 0.2);
    border-color: #f97316;
    color: #ea580c;
}

.dark .comparison-stat-remove {
    background: rgba(251, 146, 60, 0.1);
    border-color: rgba(251, 146, 60, 0.3);
    color: #fb923c;
}

.dark .comparison-stat-remove:hover {
    background: rgba(251, 146, 60, 0.2);
    border-color: #fb923c;
    color: #f97316;
}

.comparison-card-actions {
    display: grid;
    grid-template-columns: 1fr;
    gap: 10px;
}

@media (min-width: 640px) {
    .comparison-card-actions {
        grid-template-columns: 1fr 1fr;
    }
}

.comparison-action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 20px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s ease;
    min-height: 48px;
}

.comparison-action-btn svg {
    flex-shrink: 0;
}

.comparison-action-btn--add {
    background: linear-gradient(135deg, #3b82f6, #6366f1);
    border: none;
    color: white;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
}

.comparison-action-btn--add:hover {
    background: linear-gradient(135deg, #2563eb, #4f46e5);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
}

.dark .comparison-action-btn--add {
    background: linear-gradient(135deg, #60a5fa, #818cf8);
}

.dark .comparison-action-btn--add:hover {
    background: linear-gradient(135deg, #3b82f6, #6366f1);
}

.comparison-action-btn--equip {
    background: white;
    border: 2px solid var(--accent-success);
    color: var(--accent-success);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.dark .comparison-action-btn--equip {
    background: #374151;
    border-color: #34d399;
    color: #34d399;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
}

.comparison-action-btn--equip:hover {
    background: var(--accent-success);
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.dark .comparison-action-btn--equip:hover {
    background: #34d399;
    color: #064e3b;
}

/* Empty State */
.comparison-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
    text-align: center;
    background: rgba(107, 114, 128, 0.03);
    border: 2px dashed var(--border-color);
    border-radius: 16px;
    animation: fadeIn 0.3s ease-in;
}

.dark .comparison-empty-state {
    background: rgba(156, 163, 175, 0.03);
}

.comparison-empty-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 50%;
    color: var(--accent-primary);
    margin-bottom: 16px;
}

.dark .comparison-empty-icon {
    background: rgba(96, 165, 250, 0.15);
    color: #60a5fa;
}

.comparison-empty-text {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 8px 0;
}

.comparison-empty-subtext {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0;
}

/* Calculate Button */
.comparison-calculate-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    width: 100%;
    padding: 16px 24px;
    background: linear-gradient(135deg, #2563eb, #5856d6);
    border: none;
    border-radius: 12px;
    color: white;
    font-weight: 600;
    font-size: 1.05rem;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 24px;
    box-shadow: 0 4px 16px rgba(37, 99, 235, 0.3);
    min-height: 56px;
}

.dark .comparison-calculate-btn {
    background: linear-gradient(135deg, #3b82f6, #6366f1);
}

.comparison-calculate-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(37, 99, 235, 0.4);
}

.dark .comparison-calculate-btn:hover {
    box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
}

.comparison-calculate-btn:active {
    transform: translateY(0);
}

.comparison-calculate-btn svg {
    flex-shrink: 0;
}

/* Results Section */
.comparison-results-section {
    border-top: 2px solid var(--border-color);
    padding-top: 24px;
}

.comparison-results-title {
    color: var(--accent-primary);
    font-size: 1.3rem;
    font-weight: 600;
    text-align: center;
    margin: 0 0 20px 0;
    letter-spacing: 0.025em;
}

.dark .comparison-results-title {
    color: #60a5fa;
}

.comparison-results-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
}

@media (min-width: 768px) {
    .comparison-results-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (min-width: 1024px) {
    .comparison-results-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

/* Focus States for Accessibility */
.comparison-tab-button:focus-visible,
.comparison-add-tab-btn:focus-visible,
.comparison-action-btn:focus-visible,
.equipped-action-btn:focus-visible,
.comparison-calculate-btn:focus-visible,
.comparison-slot-select:focus-visible {
    outline: 3px solid var(--accent-primary);
    outline-offset: 2px;
}

.dark .comparison-tab-button:focus-visible,
.dark .comparison-add-tab-btn:focus-visible,
.dark .comparison-action-btn:focus-visible,
.dark .equipped-action-btn:focus-visible,
.dark .comparison-calculate-btn:focus-visible,
.dark .comparison-slot-select:focus-visible {
    outline-color: #60a5fa;
}

/* Mobile Optimizations */
@media (max-width: 767px) {
    .comparison-slot-selector-inner {
        flex-direction: column;
        align-items: stretch;
        gap: 8px;
    }

    .comparison-slot-select {
        width: 100%;
        min-width: unset;
    }

    .comparison-tabs-container {
        gap: 6px;
    }

    .comparison-tab-button {
        flex: 1;
        min-width: 0;
        padding: 8px 12px;
        font-size: 0.85rem;
    }

    .comparison-tab-button .tab-item-name {
        max-width: 80px;
    }
}

/* ========================================
   END COMPARISON UI ENHANCEMENTS
   ======================================== */
