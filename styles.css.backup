/* ========================================
   COMPANIONS PAGE RESPONSIVE LAYOUT
   ======================================== */

/* Main companions layout - all three sections auto-wrap */
.companions-main-layout,
#companions-grid-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    align-items: flex-start;
    justify-content: center;
}

/* Icon grid - 4 columns, min width to maintain layout */
.companions-icon-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
    flex: 0 1 400px;
    min-width: 280px;
    max-width: 280px;
}

/* Icon grid wrapper - holds grid and clear button */
.companions-icon-grid-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0 0 auto;
}

/* Detail panel - fixed width but can shrink */
.companions-detail-panel {
    min-width: 350px;
    max-width: 100%;
    background: var(--background);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    padding: 20px;
    display: flex;
    flex: 0 1 400px;
}

/* Presets panel - fills remaining space */
.companions-presets-panel {
    flex: 1 1 400px;
    min-width: 380px;
    background: var(--background);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 15px;
    max-height: 800px;
    overflow-y: auto;

    /* Modern scrollbar styling */
    scrollbar-width: thin;
    scrollbar-color: rgba(96, 165, 250, 0.5) transparent;
}

/* Webkit scrollbar (Chrome, Safari, Edge) */
.companions-presets-panel::-webkit-scrollbar {
    width: 8px;
}

.companions-presets-panel::-webkit-scrollbar-track {
    background: transparent;
    border-radius: 4px;
}

.companions-presets-panel::-webkit-scrollbar-thumb {
    background: rgba(96, 165, 250, 0.5);
    border-radius: 4px;
    transition: background 0.2s ease;
}

.companions-presets-panel::-webkit-scrollbar-thumb:hover {
    background: rgba(96, 165, 250, 0.7);
}

/* Dark mode scrollbar */
.dark .companions-presets-panel {
    scrollbar-color: rgba(96, 165, 250, 0.4) transparent;
}

.dark .companions-presets-panel::-webkit-scrollbar-thumb {
    background: rgba(96, 165, 250, 0.4);
}

.dark .companions-presets-panel::-webkit-scrollbar-thumb:hover {
    background: rgba(96, 165, 250, 0.6);
}

/* Shake animation for locked companion feedback */
@keyframes shake {
    0%, 100% { transform: translateX(0); }
    20% { transform: translateX(-5px); }
    40% { transform: translateX(5px); }
    60% { transform: translateX(-5px); }
    80% { transform: translateX(5px); }
}

/* Details/Summary element styling */
details {
    border: none;
}

details > summary {
    list-style: none;
}

details > summary::-webkit-details-marker {
    display: none;
}

details > summary:focus {
    outline: none;
}

