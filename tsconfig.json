{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "baseUrl": "./src",
    "paths": {
      "@ts/*": ["ts/*"],
      "@core/*": ["core/*"],
      "@utils/*": ["ts/utils/*"],
      "@data/*": ["ts/data/*"],
      "@ui/*": ["ui/*"],
      "@types/*": ["ts/types/*"],
    }
  },
  "include": ["**/ts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}