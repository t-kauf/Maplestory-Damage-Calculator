{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "paths": {
      "@ts/*": ["ts/*"]
    }
  },
  "include": ["**/ts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}